@{
    long paisId = ViewBag.paisId;
    @model IEnumerable<PP.IServicio.Provincia.ProvinciaDto>
}
<br />
<br />
<br />
<br />
<br />
<h2>Index</h2>

<p>
    <div class="row bottomSpace">
        <div class="col-lg-12">
            <div class="pull-left">
                <a href="@Url.Action("Create", "Provincia",new {id=paisId})"
                   class="btn btn-default pull-left btn-success">Crear Provincia</a>
            </div>
        </div>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Eliminado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PaisDescripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Eliminado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaisId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PaisDescripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                <div class="row bottomSpace">
                    <div class="col-lg-12">
                        <div class="pull-right">
                            <a href="@Url.Action("Index","Localidad",new {id=item.Id})"
                               class="btn btn-default pull-right btn-success">Ver Localidades</a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
