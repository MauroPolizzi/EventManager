<div class="container">
<div class="row">
	@foreach (var item in Model)
	{

		<div class="card col-md-2 col-xs-3 mb-4 ml-3" style="margin-top: 90px;">
			@if (item.Imagen == null)
			{
				<img class="card-img-top" src="~/Models/Imagenes/img3.jpg">
			}
			else
			{
				<img class="card-img-top" src="@Url.Content(item.Imagen)">
			}
			<div class="card-body visible-lg">
				<h4 class="card-title">@item.Nombre</h4>
				<p class="card-text">@item.Descripcion</p>
				<span>@item.FechaDesde.ToShortDateString()</span> <span>@item.HoraDesde</span>
				<a href="@Url.Action("Detail", "Evento", new {id = item.Id})" class="btn btn-info mt-2">Ir al Evento</a>
			</div>
		</div>
		
	}
</div >
</div>
