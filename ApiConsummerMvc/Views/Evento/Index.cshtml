@model IEnumerable<PP.IServicio.Evento.EventoDto>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<br />
<br />
<h2 class="text-center"><ins>Tus Eventos</ins></h2>

<div class="container mb-3">
	<a href="@Url.Action("Create", "Evento")" class="btn btn-success">Nuevo</a>
</div>

<div class="container mb-5">
	<table class="table table-striped mb-5">
		<tr class="thead-dark">
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Imagen)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descripcion)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			@*<th>
					@Html.DisplayNameFor(model => model.NombreOrganizador)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ApellidoOrganizador)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.InformacionAdicional)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Facebook)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Twitter)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Eliminado)
				</th>*@
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@if (!string.IsNullOrEmpty(item.Imagen))
                {
						<img src="@Url.Content(item.Imagen)" alt="Image" style="width:100px;height:100px;max-width:100%;" />
                }

				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descripcion)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				@*<td>
						@Html.DisplayFor(modelItem => item.NombreOrganizador)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ApellidoOrganizador)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.InformacionAdicional)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Facebook)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Twitter)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Eliminado)
					</td>*@
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
					@Html.ActionLink("Detail", "Detail", new { id = item.Id })
					<div class="row bottomSpace">
						<div class="col-lg-12">
							<div class="pull-right">
								<a href="@Url.Action("Index", "PreguntaFrecuente",new {id=item.Id})"
								   class="btn pull-right btn-success">Preguntas Frecuentes</a>
							</div>
						</div>
					</div>
				</td>
			</tr>
		}

	</table>

</div>

